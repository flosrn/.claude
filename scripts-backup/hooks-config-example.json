{
  "hooks": {
    "PostToolUse": [
      {
        "description": "üîç TypeScript Error Detection & Formatting",
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "name": "detect-project-tools",
            "command": "/Users/flo/.claude/scripts/detect-and-lint.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "description": "üõ°Ô∏è Validate TypeScript Files Before Modification",
        "matcher": "Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "name": "pre-edit-validation",
            "command": "/Users/flo/.claude/scripts/pre-edit-check.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "description": "üéØ Final Quality Gate - Comprehensive Check",
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "name": "final-quality-check",
            "command": "/Users/flo/.claude/scripts/final-quality-gate.sh"
          }
        ]
      }
    ]
  },
  "environment": {
    "NODE_OPTIONS": "--max-old-space-size=8192",
    "CLAUDE_STRICT_MODE": "true",
    "CLAUDE_NO_ANY": "true"
  }
}