{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "64000",
    "MAX_THINKING_TOKENS": "31999",
    "CLAUDE_AUTOCOMPACT_PCT_OVERRIDE": "80",
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
    "CLAUDE_CODE_EFFORT_LEVEL": "high",
    "MAX_MCP_OUTPUT_TOKENS": "50000",
    "BASH_DEFAULT_TIMEOUT_MS": "300000",
    "BASH_MAX_TIMEOUT_MS": "600000",
    "GIT_AUTHOR_NAME": "Claude Code",
    "GIT_COMMITTER_NAME": "Claude Code",
    "GIT_AUTHOR_EMAIL": "flosrn@users.noreply.github.com",
    "GIT_COMMITTER_EMAIL": "flosrn@users.noreply.github.com"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(npm run :*)",
      "Bash(git :*)",
      "Bash(pnpm :*)",
      "Bash(gh :*)",
      "Bash(cd :*)",
      "Bash(ls :*)",
      "Bash(node :*)",
      "Bash(pnpm:*)",
      "Bash(gh:*)",
      "Edit",
      "Bash(ls:*)",
      "Bash(git:*)",
      "mcp__context7",
      "mcp__exa",
      "Bash(claude mcp add:*)",
      "Bash(pnpm ts:*)",
      "Bash(mkdir:*)",
      "WebFetch(domain:upstash.com)",
      "Bash(npx prisma migrate dev:*)",
      "Bash(pnpm run:*)",
      "Bash(pnpm test:*)",
      "Bash(rm:*)",
      "Bash(claude mcp:*)",
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs",
      "Bash(pnpm lint:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "mcp__playwright__browser_navigate",
      "mcp__playwright__browser_take_screenshot",
      "mcp__exa__get_code_context_exa"
    ],
    "deny": [],
    "defaultMode": "bypassPermissions"
  },
  "model": "opus",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/bin/run-hook hook-git-context.ts"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/bin/run-hook command-validator/src/cli.ts"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/bin/run-hook hook-ts-quality-gate.ts"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/bin/run-hook hook-completion-handler.ts"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/bin/run-hook --sound need-human.mp3"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "$HOME/.claude/bin/run-hook statusline/src/index.ts",
    "padding": 0
  },
  "enabledPlugins": {
    "frontend-design@claude-plugins-official": true,
    "claude-md-management@claude-plugins-official": true,
    "claude-code-setup@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "plugin-dev@claude-plugins-official": true,
    "marketing-skills@marketingskills": true
  },
  "spinnerTipsEnabled": false,
  "alwaysThinkingEnabled": true
}
