{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "mcp__chrome-devtools__*",
      "mcp__claude-in-chrome__*",
      "mcp__playwright__*",
      "mcp__cclsp__*",
      "Bash(node *)",
      "Bash(pnpm *)",
      "Bash(git *)",
      "Bash(tree *)"
    ],
    "deny": [],
    "ask": [],
    "defaultMode": "default"
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bun /Users/flo/.claude/scripts/hook-git-context.ts"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "bun /Users/flo/.claude/scripts/hook-ts-quality-gate.ts"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bun /Users/flo/.claude/scripts/command-validator/src/cli.ts"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": []
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": []
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bun /Users/flo/.claude/scripts/statusline/src/index.ts",
    "padding": 0
  },
  "enabledPlugins": {
    "makerkit@local": true,
    "next-react-optimizer@local": true,
    "typescript-lsp@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "rust-analyzer-lsp@claude-plugins-official": true,
    "claude-notifications-go@claude-notifications-go": true
  },
  "extraKnownMarketplaces": {
    "local": {
      "source": {
        "source": "directory",
        "path": "/Users/flo/.claude/plugins/local"
      }
    }
  },
  "alwaysThinkingEnabled": true
}
