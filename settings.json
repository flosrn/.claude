{
  "permissions": {
    "allow": [
      "Bash(*)",
      "Edit(*)",
      "Write(*)",
      "Read(*)"
    ]
  },
  "env": {
    "CLAUDE_NO_ANY": "true"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bun $HOME/.claude/scripts/validate-command.js",
            "timeout": 3000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bun $HOME/.claude/hooks/ts/run-ts-quality.js",
            "timeout": 15000
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay -v 0.1 $HOME/.claude/songs/finish.mp3",
            "run_in_background": true,
            "timeout": 2000
          },
          {
            "type": "command",
            "command": "python3 $HOME/.claude/ccnotify/ccnotify.py Stop",
            "run_in_background": true,
            "timeout": 3000
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": ".claude",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"/Users/flo/.claude/flashback/scripts/session-start.sh\""
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $HOME/.claude/ccnotify/ccnotify.py UserPromptSubmit",
            "run_in_background": true,
            "timeout": 2000
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $HOME/.claude/ccnotify/ccnotify.py Notification",
            "run_in_background": true,
            "timeout": 2000
          }
        ]
      }
    ]
  }
}
