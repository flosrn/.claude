{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "mcp__chrome-devtools__evaluate_script",
      "mcp__chrome-devtools__take_screenshot",
      "mcp__chrome-devtools__take_snapshot",
      "mcp__chrome-devtools__click",
      "mcp__chrome-devtools__navigate_page",
      "mcp__chrome-devtools__wait_for",
      "Bash(node -e:*)",
      "Bash(pnpm i)",
      "Bash(git add:*)",
      "Bash(pnpm run typecheck:*)",
      "Bash(tree:*)"
    ],
    "deny": [],
    "ask": [],
    "defaultMode": "default"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "bun /Users/flo/.claude/scripts/hook-post-file-enhanced.ts"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bun /Users/flo/.claude/scripts/command-validator/src/cli.ts"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bun /Users/flo/.claude/scripts/hook-stop.ts"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay -v 0.1 /Users/flo/.claude/song/need-human.mp3"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bun /Users/flo/.claude/scripts/statusline/src/index.ts",
    "padding": 0
  },
  "enabledPlugins": {
    "code-review@claude-code-plugins": true,
    "makerkit@local": true,
    "wd@wd-marketplace": true,
    "frontend-design@claude-code-plugins": true,
    "plugin-dev@claude-code-plugins": true,
    "next-react-optimizer@local": true
  },
  "extraKnownMarketplaces": {
    "local": {
      "source": {
        "source": "directory",
        "path": "/Users/flo/.claude/plugins/local"
      }
    }
  },
  "alwaysThinkingEnabled": true
}
