{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "mcp__chrome-devtools__*",
      "mcp__claude-in-chrome__*",
      "mcp__playwright__*",
      "mcp__cclsp__*",
      "Bash(node -e:*)",
      "Bash(pnpm i)",
      "Bash(git add:*)",
      "Bash(pnpm run typecheck:*)",
      "Bash(tree:*)",
      "Bash(git :*)"
    ],
    "deny": [],
    "ask": [],
    "defaultMode": "default"
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bun /Users/flo/.claude/scripts/hook-tool-router.ts"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bun /Users/flo/.claude/scripts/hook-session-start.ts"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "bun /Users/flo/.claude/scripts/hook-post-file-enhanced.ts"
          }
        ]
      },
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "bun /Users/flo/.claude/scripts/hook-apex-clipboard.ts"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bun /Users/flo/.claude/scripts/command-validator/src/cli.ts"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bun /Users/flo/.claude/scripts/hook-stop.ts"
          },
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Task completed\" with title \"Claude Code\"'"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay -v 0.1 /Users/flo/.claude/song/need-human.mp3"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bun /Users/flo/.claude/scripts/statusline/src/index.ts",
    "padding": 0
  },
  "enabledPlugins": {
    "makerkit@local": true,
    "next-react-optimizer@local": true,
    "typescript-lsp@claude-plugins-official": true
  },
  "extraKnownMarketplaces": {
    "local": {
      "source": {
        "source": "directory",
        "path": "/Users/flo/.claude/plugins/local"
      }
    }
  },
  "alwaysThinkingEnabled": true
}
