{
  "env": {
    "CLAUDE_NO_TS_CHECK": "false",
    "CLAUDE_MEMORY_SEARCH_AUTO": "false"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash",
      "Edit",
      "Write",
      "Read"
    ]
  },
  "model": "sonnet",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.claude/scripts/update-claude-date.sh",
            "timeout": 1000
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bun $HOME/.claude/scripts/validate-command.js",
            "timeout": 3000
          },
          {
            "type": "command",
            "command": "uv run $HOME/.claude/hooks/observability/send_event.py --source-app claude-setup --event-type PreToolUse",
            "timeout": 2000
          }
        ]
      },
      {
        "matcher": "Edit|Write|Read",
        "hooks": [
          {
            "type": "command",
            "command": "uv run $HOME/.claude/hooks/observability/send_event.py --source-app claude-setup --event-type PreToolUse",
            "timeout": 2000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bun $HOME/.claude/hooks/ts/run-ts-quality.js",
            "timeout": 15000
          },
          {
            "type": "command",
            "command": "uv run $HOME/.claude/hooks/observability/send_event.py --source-app claude-setup --event-type PostToolUse",
            "timeout": 2000
          }
        ]
      },
      {
        "matcher": "Bash|Read",
        "hooks": [
          {
            "type": "command",
            "command": "uv run $HOME/.claude/hooks/observability/send_event.py --source-app claude-setup --event-type PostToolUse",
            "timeout": 2000
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay -v 0.1 $HOME/.claude/songs/finish.mp3",
            "timeout": 2000
          },
          {
            "type": "command",
            "command": "python3 $HOME/.claude/ccnotify/ccnotify.py Stop",
            "timeout": 3000
          },
          {
            "type": "command",
            "command": "uv run $HOME/.claude/hooks/observability/send_event.py --source-app claude-setup --event-type Stop",
            "timeout": 2000
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $HOME/.claude/ccnotify/ccnotify.py UserPromptSubmit",
            "timeout": 2000
          },
          {
            "type": "command",
            "command": "uv run $HOME/.claude/hooks/observability/send_event.py --source-app claude-setup --event-type UserPromptSubmit",
            "timeout": 2000
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $HOME/.claude/ccnotify/ccnotify.py Notification",
            "timeout": 2000
          },
          {
            "type": "command",
            "command": "uv run $HOME/.claude/hooks/observability/send_event.py --source-app claude-setup --event-type Notification",
            "timeout": 2000
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash /Users/flo/.claude/observability/statusline-ccusage.sh",
    "padding": 0
  }
}
